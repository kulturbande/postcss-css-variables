{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "src/tests"]
}
